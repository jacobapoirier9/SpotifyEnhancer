<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spotify Enhancer</title>

    <link rel="stylesheet" href="~/mobile/css/bootstrap/bootstrap.css" />
    <link rel="stylesheet" href="~/mobile/css/bootstrap/bootstrap-dialog.css" />
    <link rel="stylesheet" href="~/mobile/css/site.css" />
    @*<link rel="stylesheet" href="~/mobile/css/bootstrap-checkbox.css" />*@

    <script src="/mobile/js/modernizr/modernizr-2.8.3.js"></script>
</head>
<body style="background: linear-gradient(#e66465, #9198e5) no-repeat fixed; background-attachment: fixed; position: absolute;">

    <style>
    </style>
    <script src="~/mobile/js/jquery/jquery-3.5.0.min.js"></script>
    <script src="~/mobile/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/mobile/js/bootstrap/validator.min.js"></script>
    <script src="~/mobile/js/bootstrap/bootstrap-dialog.js"></script>
    <script src="~/mobile/js/site.js"></script>

    <div class="container body-content" style="overflow-y: hidden;">
        <div class="col-md-4"> </div>
        <div class="col-md-4 row">
            <!-- There is a bug where the background images stretches across the entire list.
                This only happens when looking at it through my phone.-->
            <div class="panel" style="background-color: transparent; border: none;">
                @*<div class="panel-heading" style="text-align:center; width: 100%; height: 100%;">Spotify</div>*@
                <div class="panel-body" style="max-height: 75%;">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="col-md-4"> </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
