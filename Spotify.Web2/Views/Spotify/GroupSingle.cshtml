@model Group
@{
    ViewData["Title"] = Model.GroupName;
}

<div class="row">
    <div class="col-xs-12 col-md-8">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Tracks</h3>
            </div>
            <div class="box-body">
                <div class="grid-container">
                    <table id="tracksGrid"></table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-4">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Analysis</h3>
            </div>
            <div class="box-body">

                @{ var audioFeatures = _cache.Get<AudioFeatures>(this.User.Claim<string>(Names.Username), nameof(SpotifyController.CachedAudioFeatures)); }

                <label>@nameof(audioFeatures.Acousticness)</label>
                <span>@audioFeatures.Acousticness</span>
                <br />

                <label>@nameof(audioFeatures.Danceability)</label>
                <span>@audioFeatures.Danceability</span>
                <br />

                <label>@nameof(audioFeatures.Speechiness)</label>
                <span>@audioFeatures.Speechiness</span>
                <br />

                <label>@nameof(audioFeatures.Energy)</label>
                <span>@audioFeatures.Energy</span>
                <br />

                <label>@nameof(audioFeatures.Instrumentalness)</label>
                <span>@audioFeatures.Instrumentalness</span>
                <br />

                <label>@nameof(audioFeatures.Liveness)</label>
                <span>@audioFeatures.Liveness</span>
                <br />

                <label>@nameof(audioFeatures.Loudness)</label>
                <span>@audioFeatures.Loudness</span>
                <br />

                <label>@nameof(audioFeatures.Valence)</label>
                <span>@audioFeatures.Valence</span>
                <br />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(spotify.page.groupSingle.init)
    </script>
}