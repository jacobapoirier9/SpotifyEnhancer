@model TrackSingleViewModel
@{
    ViewData["Title"] = $"{Model.Track.Name} - {Model.Track.Artists.FirstOrDefault().Name}";
}

<div class="row">
    <div class="col-xs-12 col-md-4">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Track</h3>
            </div>
            <div class="box-body">
                <h1>@Model.Track.Name</h1>

                @*
                    Sample Song (Simple by Florida Georgia Line)
                     4L9Ds4mpD3SuYoWwFUlv16
                    "danceability" : 0.362,
                    "energy" : 0.882,
                    "key" : 3,
                    "loudness" : -3.717,
                    "mode" : 1,
                    "speechiness" : 0.0973,
                    "acousticness" : 0.0791,
                    "instrumentalness" : 0,
                    "liveness" : 0.150,
                    "valence" : 0.864,
                    "tempo" : 199.811,
               *@
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-4">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Album</h3>
            </div>
            <div class="box-body">
                <h1>@Model.Track.Album.Name</h1>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-4">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Artists</h3>
            </div>
            <div class="box-body">
                @foreach (var artist in Model.Track.AllUniqueArtists)
                {
                    <h1>@artist.Name</h1>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Developer View</h3>
            </div>
            <div class="box-body">
                @inject ServiceStack.IServiceClient spotify

                <pre>@(spotify.Get<string>($"/audio-features/{Model.Track.Id}"))</pre>
                <pre>@(spotify.Get<string>($"/tracks/{Model.Track.Id}"))</pre>
                <pre>@(spotify.Get<string>($"/recommendations?seed_tracks={Model.Track.Id}"))</pre>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    </script>
} 