@model TrackSingleViewModel
@{
    ViewData["Title"] = $"{Model.Track.Name} - {Model.Track.Artists.FirstOrDefault().Name}";
}

<div class="row">
    <div class="col-xs-12 col-md-4">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Track</h3>
            </div>
            <div class="box-body">
                <h1>@Model.Track.Name</h1>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-4">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Album</h3>
            </div>
            <div class="box-body">
                <h1>@Model.Track.Album.Name</h1>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-4">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Artists</h3>
            </div>
            <div class="box-body">
                @foreach (var artist in Model.Track.AllUniqueArtists)
                {
                    <h1>@artist.Name</h1>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    </script>
} 