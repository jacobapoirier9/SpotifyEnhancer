<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spotify.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/admin-lte/AdminLTE.min.css" />
    <link rel="stylesheet" href="~/lib/jqgrid/ui.jqgrid-bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Spotify.Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Spotify" asp-action="Groups">Groups</a>
                        </li>
                        <!-- Quick actions to get to specific pages for testing -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://localhost:5001/Spotify/Track?trackId=5sNESr6pQfIhL3krM8CtZn">Numb / Encore</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div id="currently-playing" style="position: fixed; bottom: 0; left: 0;">
             @*<img width="100" height="100" />*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/admin-lte/adminlte.js"></script>
    <script src="~/lib/jqgrid/grid.locale-en.js"></script>
    <script src="~/lib/jqgrid/jquery.jqGrid.js"></script>
    
    <script src="~/ts/site.js" asp-append-version="true"></script>
    <script>
        $(spotify.init)
    </script>
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
